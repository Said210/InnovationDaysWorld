<div id="<%= dom_id edition %>">
  <p class="my-5">
    <h1 class="text-center w-full font-bold text-4xl">Edition <%= edition.name %></h1>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Begin at:</strong>
    <%= edition.begin_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End at:</strong>
    <%= edition.end_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this edition", edition, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this edition', edit_edition_path(edition), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
